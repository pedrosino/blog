<div class="container">

  <%= simple_form_for(@article, html: { class: 'form-horizontal' }) do |f| %>

    <%= render 'shared/error_messages', object: @article %>

    <%= f.input :title, hint: "Article's title" %>

    <%= f.input :text, hint: "The article text goes here" %>

    <%= f.submit class: "btn btn-primary" %>

  <% end %>

</div>